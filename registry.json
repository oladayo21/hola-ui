{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "hola-ui",
  "homepage": "https://github.com/oladayo21/hola-ui",
  "items": [
    {
      "name": "utils",
      "type": "registry:lib",
      "title": "Utilities",
      "description": "cn helper for class merging (clsx + tailwind-merge).",
      "dependencies": ["clsx", "tailwind-merge"],
      "files": [
        {
          "path": "registry/default/utils/cn.ts",
          "type": "registry:lib",
          "target": "lib/utils.ts"
        }
      ]
    },
    {
      "name": "theme",
      "type": "registry:file",
      "title": "Theme",
      "description": "Default hola-ui theme - dark, flat, muted teal. Requires Tailwind v4.",
      "files": [
        {
          "path": "registry/default/theme/theme.css",
          "type": "registry:file",
          "target": "src/styles/hola-theme.css"
        }
      ]
    },
    {
      "name": "button",
      "type": "registry:ui",
      "title": "Button",
      "description": "Button with primary, secondary, ghost, and danger variants.",
      "dependencies": ["class-variance-authority"],
      "registryDependencies": ["utils"],
      "files": [
        {
          "path": "registry/default/button/button.tsx",
          "type": "registry:ui"
        }
      ]
    },
    {
      "name": "input",
      "type": "registry:ui",
      "title": "Input",
      "description": "Text input built on Base UI with default and ghost variants.",
      "dependencies": ["@base-ui-components/react", "class-variance-authority"],
      "registryDependencies": ["utils"],
      "files": [
        {
          "path": "registry/default/input/input.tsx",
          "type": "registry:ui"
        }
      ]
    },
    {
      "name": "textarea",
      "type": "registry:ui",
      "title": "Textarea",
      "description": "Multiline text input built on Base UI with default and ghost variants.",
      "dependencies": ["@base-ui-components/react", "class-variance-authority"],
      "registryDependencies": ["utils"],
      "files": [
        {
          "path": "registry/default/textarea/textarea.tsx",
          "type": "registry:ui"
        }
      ]
    },
    {
      "name": "badge",
      "type": "registry:ui",
      "title": "Badge",
      "description": "Badge with default, success, warning, and danger variants.",
      "dependencies": ["class-variance-authority"],
      "registryDependencies": ["utils"],
      "files": [
        {
          "path": "registry/default/badge/badge.tsx",
          "type": "registry:ui"
        }
      ]
    }
  ]
}
